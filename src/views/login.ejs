<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <div class="login-app">
        <div class="login-app-content">
            <div class="wrap-login-img">
                <img src="/images/social-network.svg" alt="" class="login-img">
            </div>
            <div class="login-form">
                <form action="/auth/login" method="POST">
                    <h2 class="login-form-heading">Sign in</h2>
                    <div class="form-group">
                        <input type="text" class="form-control" required name="username" id="username">
                        <label for="username" class="form-label">Username</label>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" required minlength="6" name="password" id="password">
                        <label for="password" class="form-label">Password</label>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="rememberMe" id="rememberMe">
                        <label for="rememberMe">Remember me</label>
                    </div>

                    <% if (messages.error) { %>
                        <p class="alert alert-danger"><%= messages.error %></p>
                    <% } %>
                    <button class="login-btn login-submit-btn" type="submit">Sign in</button>
                </form>
                <div class="separate">
                    <span class="separate-or">OR</span>
                </div>
                <button class="login-btn btn-login-with-gg">
                    <span class="login-with-gg">
                        Sign in with Google
                    </span>
                </button>
            </div>
        </div>
    </div>

    <script src="/javascripts/main.js"></script>
    <% if (message) { %>
        <script>
            alert('<%= message %>');
        </script>
    <% } %>
</body>
</html>