<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <div class="main-app">
        <%- include('../partials/header.ejs')%>

        <div class="notification-container notification-container-form-post-res">
            <div class="profile-background"></div>
            <div class="notification-container__body">
                <nav class="breadcrumb mt-72">
                    <ol class="breadcrumb-list">
                        <li class="breadcrumb-item active"><a href="/"><i class="fas fa-home breadcrumb-icon"></i>Home</a></li>
                        <li class="breadcrumb-item active"><a href="/notification/me">Your notification</a></li>
                        <li class="breadcrumb-item">Post a notice</li>
                    </ol>
                </nav>
    
                <div class="wrap-form-post-notify">
                    <h4 class="form-post-notify__heading">New Posts Notification</h4>
                    <form action="" method="POST" enctype="multipart/form-data" id="form-post-notification">
                        <div class="body-notify-select-form-post">
                            <select name="ofDepartment" id="ofDepartment" required>
                                <option value="">Select Faculty/Department</option>
                                <% user.department.forEach(item => { %>
                                    <option value="<%= item %>"><%= item %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="notify-input-text" class="form-label-notify">Title <span class="star-red">*</span></label>
                            <input type="text" class="form-control-notify" id="notify-input-text" name="title" required placeholder="Please enter a notification title...">
                        </div>
                        <div class="form-group">
                            <label for="textarea-notify" class="form-label-notify">Content <span class="star-red">*</span></label>
                            <textarea name="content" id="textarea-notify" cols="30" rows="10" required placeholder="Please enter details of the notification!!!"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="notify-input-file" class="form-label-notify">Files</label>
                            <input type="file" class="form-control-notify" id="notify-input-file" name="files" multiple 
                                accept="image/*,video/*,audio/*,.txt,.txt,.zip,.pdf,.pptx,.ppt,.xlsx,.xls,.doc,.docx,.xml,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document">
                        </div>
                        <ul class="list-file-upload"></ul>
                        <button class="btn btn-submit-form-notify">Post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Message real time -->
    <div class="wrap-message-real-time"></div>

    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/javascripts/main.js"></script>
</body>
</html>