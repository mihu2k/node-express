<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <div class="main-app">
        <%- include('./partials/header.ejs') %>

        <div class="app__container">
            <div class="profile-background"></div>
            <div class="grid position-relative">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="app__container-notification">
                            <div class="app__container-box-notification">
                                <div class="box-notification__wrap-heading">
                                    <div class="box-notification__heading-left">
                                        <img src="/images/icon-new.png" alt="" class="box-notification__heading-img">
                                        <p class="box-notification__heading-title">New notifications</p>
                                    </div>
                                    <a href="/notification" class="box-notification__heading-link">All notifications</a>
                                </div>
                                <ul class="box-notification__list">
                                    <% fourNotify.forEach(notify => { %>
                                        <li class="box-notification__item">
                                            <p class="box-notification__department-name">
                                                <% if (!notify.ofDepartment) { %>
                                                    <%= notify.authorId.name %> -
                                                <% } else { %>
                                                    <%= notify.ofDepartment %> -
                                                <% } %>
                                                <span class="box-notification__item-time"> <%= new Date(notify.createdAt).toLocaleDateString('en-US') %></span>
                                            </p>
                                            <a href="/notification/detail/<%= notify._id %>" class="box-notification__body-title">
                                                <%= notify.title %>
                                            </a>
                                            <p class="box-notification__body-content">
                                                <% if (notify.files.length > 0) { %>
                                                    Xem chi tiết trong các file đính kèm
                                                <% } else { %>
                                                    <%= notify.title %>
                                                <% } %>
                                            </p>
                                        </li>
                                    <% }) %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="app__container-timeline">
                            <!-- Start form post -->
                            <div class="timeline__form-post mb-16">
                                <div class="timeline__wrap-input">
                                    <img src="<%= user.avatar %>" alt="" class="timeline__wrap-input-avt">
                                    <span class="timeline__wrap-input-open">What's on your mind, <%= user.name %>?</span>
                                </div>
                                <ul class="timeline__options-list">
                                    <li class="timeline__options-item">
                                        <i class="fas fa-video timeline__options-icon color-red"></i> Live Video
                                    </li>
                                    <li class="timeline__options-item">
                                        <i class="fas fa-images timeline__options-icon color-green"></i> Photo/Video
                                    </li>
                                    <li class="timeline__options-item">
                                        <i class="far fa-laugh timeline__options-icon color-yellow"></i> Feeling/Activity
                                    </li>
                                </ul>
                            </div>
                            <!-- End form post -->

                            <!-- Start the news -->
                            <!-- End the news -->
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="app__container-list-students">
                            <div class="list-students__heading">
                                <h2 class="list-students__heading-title">Students</h2>
                                <label class="list-students__heading-wrap-icon" for="search">
                                    <i class="ti-search list-students__heading-icon-search"></i>
                                </label>
                            </div>
                            <div class="list-students__search">
                                <input type="text" class="list-students__search-input" id="search" placeholder="Type to search...">
                            </div>
                            <ul class="list-students__body-list">
                                <% students.forEach(student => { %>
                                    <li class="list-students__body-item">
                                        <a href="/profile/<%= student._id %>" class="list-students__body-item-link">
                                            <img src="<%= student.avatar %>" alt="" class="list-students__body-item-img">
                                            <span class="list-students__body-item-name"><%= student.name %></span>
                                        </a>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal">
        <div class="modal__overlay"></div>
        <div class="modal__body">
            <!-- Start form post -->
            <div class="wrap-form-post-news">
                <div class="form-post-news__container">
                    <h2 class="form-edit-prof-heading">Create Post</h2>
                    <div class="btn-close-edit-prof">&times;</div>
                    <div class="form-post-news__heading">
                        <img src="<%= user.avatar %>" alt="" class="wrap-user-status-avt">
                        <div class="wrap-form-post-name-and-status">
                            <p class="wrap-form-post-name"><%= user.name %></p>
                            <div class="wrap-form-post-status">
                                <i class="fas fa-globe-americas"></i> Public
                            </div>
                        </div>
                    </div>
                    <form action="" method="POST" enctype="multipart/form-data" class="form-post-news" data-id="<%= user._id %>">
                        <textarea name="textarea" id="textareaCreate" cols="30" rows="10" placeholder="What's on your mind, <%= user.name%>?" class="form-post-news-textarea" required></textarea>
                        <div class="display-img-form-post-news">
                            <div class="wrap-show-img__input-img">
                                <img src="" alt="" class="textarea__img-form-post-news">
                            </div>
                            <div class="btn-close-image-form-post-news">&times;</div>
                        </div>

                        <div class="form-group mt-16 form-group-video-link">
                            <label for="form-post-news-input-link-video" class="form-label">Video link</label>
                            <input type="text " class="form-control border-color-gray mt-4" name="video" id="form-post-news-input-link-video" placeholder="Please enter video link...">
                        </div>
                        <div class="form-post-wrap-icon">
                            <p class="form-post-wrap-icon__text">Add to Your Post</p>
                            <div>
                                <!-- Upload image -->
                                <label for="form-post-news-upload-img" class="fas fa-images form-post-news-icon color-green mr-16"></label>
                                <input type="file" accept="image/*" name="image" id="form-post-news-upload-img" hidden>

                                <i class="fab fa-youtube form-post-news-icon color-red"></i>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-submit-form-post-news"><strong>Post</strong></button>
                    </form>
                </div>
            </div>
            <!-- End form post -->

            <!-- Start form edit post -->
            <div class="wrap-form-edit-post-news">
                <div class="form-post-news__container">
                    <h2 class="form-edit-prof-heading">Edit Post</h2>
                    <div class="btn-close-edit-form-post">&times;</div>
                    <div class="form-post-news__heading">
                        <img src="<%= user.avatar %>" alt="" class="wrap-user-status-avt">
                        <div class="wrap-form-post-name-and-status">
                            <p class="wrap-form-post-name"><%= user.name %></p>
                            <div class="wrap-form-post-status">
                                <i class="fas fa-globe-americas"></i> Public
                            </div>
                        </div>
                    </div>
                    <form enctype="multipart/form-data" class="form-edit-post-news" data-postid="" data-id="<%= user._id %>">
                        <textarea name="textareaEdit" id="textareaEdit" cols="30" rows="10" placeholder="What's on your mind, <%= user.name%>?" 
                            class="form-edit-post-news-textarea" required></textarea>
                        <div class="display-img-form-post-edit">
                            <div class="wrap-show-img__input-img-edit">
                                <img src="" alt="" class="textarea__img-form-post-edit">
                            </div>
                            <div class="btn-close-image-form-post-edit">&times;</div>
                        </div>

                        <div class="form-group mt-16 form-group-video-link-edit">
                            <label for="form-post-news-input-link-video" class="form-label">Video link</label>
                            <input type="text " class="form-control border-color-gray mt-4" name="videoEdit" id="form-edit-post-input-link-video" placeholder="Please enter video link...">
                        </div>
                        <div class="form-post-wrap-icon">
                            <p class="form-post-wrap-icon__text">Add to Your Post</p>
                            <div>
                                <!-- Upload image -->
                                <label for="form-edit-post-upload-img" class="fas fa-images form-post-news-icon color-green mr-16"></label>
                                <input type="file" accept="image/*" name="imageEdit" id="form-edit-post-upload-img" hidden>

                                <i class="fab fa-youtube form-edit-post-news-icon color-red"></i>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-submit-form-post-news"><strong>Edit</strong></button>
                    </form>
                </div>
            </div>
            <!-- End form edit post -->
        </div>
    </div>

    <!-- Loading -->
    <div class="loading">Loading...</div>

    <!-- Message real time -->
    <div class="wrap-message-real-time"></div>
    
    <script>
        var userLogin = JSON.parse('<%- userLogin %>');
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/javascripts/main.js"></script>
</body>
</html>